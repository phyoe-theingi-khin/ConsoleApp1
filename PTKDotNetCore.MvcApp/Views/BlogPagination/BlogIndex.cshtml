@model BlogResponseModel
@{
    int count = 0;
    int pageNo = Model.pageNo;
    int pageCount = Model.pageCount;
    int pageSize = Model.pageSize;
    string GetUrl(int pageNo)
    {
        return $"/BlogPagination/Index?ageNo={pageCount}&pageSize={pageSize}";
    }
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (BlogModel item in Model.Data)
        {
            <tr>
                <td>
                    <a href="/Blog/Edit/@item.BlogId" class="btn btn-warning">Edit</a>
                    <a href="/Blog/Delete/@item.BlogId" class="btn btn-danger btn-delete">Delete</a>
                </td>
                <th scope="row">@(++count)</th>
                <td>@item.BlogTitle</td>
                <td>@item.BlogAuthor</td>
                <td>@item.BlogContent</td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
       @*  <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li> *@
        @if (pageCount == 9)
        {
            for(int i=1; i<=pageCount; i++)
            {
                if(pageNo == i)
                {
                    <li class="page-item active">
                        <a class="page-link" href="/BlogPagination/Index?ageNo=@i&pageSize=@pageSize">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="/BlogPagination/Index?ageNo=@i&pageSize=@pageSize">@i</a>
                    </li>
                }
            }
        }

    </ul>
</nav>